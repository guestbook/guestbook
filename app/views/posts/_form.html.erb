<div class="col-md-6 post-form">
  <%= form_for(@post, role: "form") do |f| %>
    <div class="form-group">
      <%= f.label :message %><br>
      <%= f.text_area :message, class: "form-control", rows: "5" %>
    </div>

    <div class="row">
      <div class="col-md-8">
        <span class="octicon octicon-markdown"></span>
        Markdown supported
      </div>
      <div class="col-md-4 text-right">
        <%= f.submit("Post message", class: "btn btn-primary") %>
      </div>
    </div>
  <% end %>
</div>
